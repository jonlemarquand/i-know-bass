{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
			"app/*": ["app/*"],
			"config/*": ["app/_config/*"],
			"components/*": ["components/*"],
			"data/*": ["data/*"],
			"environment/*": ["environments/*"],
			"shared/*": ["app/_shared/*"],
			"helpers/*": ["helpers/*"],
			"tests/*": ["tests/*"]
	},
		"baseUrl": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}